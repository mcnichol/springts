
window.towtrucks = [];

function addTruck(data){
	
	data.lat = 42.428267172229454,
	data.lng = -96.49894433593748,
	data.id = data.id || '',
	data.name = data.name || '',
	data.status = data.status || '';
	window.towtrucks.push({
		'gps' : {'lat':data.lat,'lng':data.lng},
		'id'  : data.id,
		'name': data.name,
		'status': data.status
	});
	
	var marker = new google.maps.Marker({
	    position: towtruck[towtruck.length-1].gps,
	    icon: newTruck(),
	    map: map
	 });
}

